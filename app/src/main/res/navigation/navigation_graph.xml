<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/splashScreenFragment">
    <fragment
        android:id="@+id/splashScreenFragment"
        android:name="com.parita.mentalhealthapp.screens.Splash.SplashScreenFragment"
        android:label="SplashScreenFragment" >
        <action
            android:id="@+id/viewLogin"
            app:destination="@id/loginFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/navigation_graph"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splashScreenFragment_to_homeScreenFragment"
            app:destination="@id/homeScreenFragment" />
        <action
            android:id="@+id/viewSplashToSignUp"
            app:destination="@id/signupFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.parita.mentalhealthapp.screens.Login.LoginFragment"
        android:label="LoginFragment" >
        <action
            android:id="@+id/viewHome"
            app:destination="@id/homeScreenFragment" />
        <action
            android:id="@+id/viewSignUp"
            app:destination="@id/signupFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeScreenFragment"
        android:name="com.parita.mentalhealthapp.screens.Home.HomeScreenFragment"
        android:label="HomeScreenFragment" />
    <fragment
        android:id="@+id/signupFragment"
        android:name="com.parita.mentalhealthapp.screens.signup.SignupFragment"
        android:label="SignupFragment" >
        <action
            android:id="@+id/action_signupFragment_to_homeScreenFragment"
            app:destination="@id/homeScreenFragment" />
    </fragment>
</navigation>