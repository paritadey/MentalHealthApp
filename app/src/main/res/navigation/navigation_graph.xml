<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/splashScreenFragment">
    <fragment
        android:id="@+id/splashScreenFragment"
        android:name="com.parita.mentalhealthapp.screens.Splash.SplashScreenFragment"
        android:label="SplashScreenFragment" >
        <action
            android:id="@+id/viewLogin"
            app:destination="@id/loginFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/navigation_graph"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splashScreenFragment_to_homeScreenFragment"
            app:destination="@id/homeScreenFragment" />
        <action
            android:id="@+id/viewSplashToSignUp"
            app:destination="@id/signupFragment" />
        <action
            android:id="@+id/viewWelcomeScreen"
            app:destination="@id/welcomeScreenFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.parita.mentalhealthapp.screens.Login.LoginFragment"
        android:label="LoginFragment" >
        <action
            android:id="@+id/viewHome"
            app:destination="@id/homeScreenFragment" />
        <action
            android:id="@+id/viewSignUp"
            app:destination="@id/signupFragment" />
        <action
            android:id="@+id/loginToForgotPassword"
            app:destination="@id/forgotPasswordFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeScreenFragment"
        android:name="com.parita.mentalhealthapp.screens.Home.HomeScreenFragment"
        android:label="HomeScreenFragment" />
    <fragment
        android:id="@+id/signupFragment"
        android:name="com.parita.mentalhealthapp.screens.signup.SignupFragment"
        android:label="SignupFragment" >
        <action
            android:id="@+id/signupToHome"
            app:destination="@id/homeScreenFragment" />
    </fragment>
    <fragment
        android:id="@+id/welcomeScreenFragment"
        android:name="com.parita.mentalhealthapp.screens.welcome.WelcomeScreenFragment"
        android:label="WelcomeScreenFragment" >
        <action
            android:id="@+id/action_welcomeScreenFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/viewOnBoarding"
            app:destination="@id/onboardingFragment" />
    </fragment>
    <fragment
        android:id="@+id/onboardingFragment"
        android:name="com.parita.mentalhealthapp.screens.welcome.OnboardingFragment"
        android:label="OnboardingFragment" >
        <action
            android:id="@+id/viewOnboardingToLogin"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/forgotPasswordFragment"
        android:name="com.parita.mentalhealthapp.screens.forgotpassword.ForgotPasswordFragment"
        android:label="ForgotPasswordFragment" >
        <action
            android:id="@+id/action_forgotPasswordFragment_to_pieChartFragment"
            app:destination="@id/pieChartFragment" />
    </fragment>
    <fragment
        android:id="@+id/pieChartFragment"
        android:name="com.parita.mentalhealthapp.screens.forgotpassword.PieChartFragment"
        android:label="PieChartFragment" />
</navigation>